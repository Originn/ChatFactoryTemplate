# Copy this file to .env and configure for your chatbot

# ===========================================
# COMPANY & PRODUCT CONFIGURATION
# ===========================================
NEXT_PUBLIC_COMPANY_NAME=Your Company Name
NEXT_PUBLIC_COMPANY_DOMAIN=yourcompany.com
NEXT_PUBLIC_COMPANY_DESCRIPTION=AI-powered software
NEXT_PUBLIC_SUPPORT_URL=https://yourcompany.com/support
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourcompany.com
NEXT_PUBLIC_TECHNICAL_SUPPORT_URL=https://yourcompany.com/support

# Product Information
NEXT_PUBLIC_PRODUCT_NAME=Your Product Name
NEXT_PUBLIC_PRODUCT_ABBREVIATION=YP

# ===========================================
# CHATBOT APPEARANCE & BEHAVIOR
# ===========================================
NEXT_PUBLIC_CHATBOT_ID=your-chatbot-id
NEXT_PUBLIC_CHATBOT_NAME=AI Assistant
NEXT_PUBLIC_CHATBOT_DESCRIPTION=AI-powered assistant for your product
NEXT_PUBLIC_CHATBOT_LOGO_URL=
NEXT_PUBLIC_CHATBOT_PRIMARY_COLOR=#3b82f6
NEXT_PUBLIC_CHATBOT_BUBBLE_STYLE=rounded
NEXT_PUBLIC_CHATBOT_LOGIN_REQUIRED=false

# Custom Domain (Optional)
NEXT_PUBLIC_CUSTOM_DOMAIN=

# ===========================================
# AI & DATABASE CONFIGURATION
# ===========================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-4
IMAGE_MODEL_NAME=gpt-4-mini
TEMPRATURE=0

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west4-gcp
PINECONE_INDEX_NAME=your_index_name
PINECONE_NAMESPACE=default
MINSCORESOURCESTHRESHOLD=0.73

# PostgreSQL Database (Neon)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# ===========================================
# FIREBASE AUTHENTICATION
# ===========================================
# Client Configuration (Public)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Server Configuration (Private)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# ===========================================
# EMBEDDINGS & RETRIEVAL SETTINGS
# ===========================================
# Embedding Provider Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Embedding API Keys (based on provider)
JINA_API_KEY=your_jina_api_key_here
HUGGINGFACEHUB_API_KEY=your_huggingface_api_key_here
# Note: OPENAI_API_KEY and COHERE_API_KEY are already defined above

# Image Embedding Configuration (NEW)
NEXT_PUBLIC_ENABLE_IMAGE_EMBEDDINGS=false
# Set to 'true' to enable automatic embedding generation for uploaded images
# Requires: EMBEDDING_PROVIDER=jina, JINA_API_KEY, and Pinecone index with correct dimensions
# Recommended: EMBEDDING_MODEL=jina-embeddings-v4, EMBEDDING_DIMENSIONS=512
# Note: This is automatically set to 'true' by ChatFactory when creating multimodal-enabled chatbots

# Retrieval Settings
FETCH_K_EMBEDDINGS=12
LAMBDA_EMBEDDINGS=0.2
K_EMBEDDINGS=10

# ===========================================
# NEO4J GRAPH DATABASE (OPTIONAL)
# ===========================================
# Neo4j Configuration for Graph RAG
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# ===========================================
# ANALYTICS & TRACKING
# ===========================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
