# Chatbot Branding Configuration (for local development)
NEXT_PUBLIC_CHATBOT_ID=your-chatbot-id
NEXT_PUBLIC_CHATBOT_NAME=Your AI Assistant
NEXT_PUBLIC_CHATBOT_DESCRIPTION=AI-powered assistant for your product
NEXT_PUBLIC_CHATBOT_LOGO_URL=
NEXT_PUBLIC_CHATBOT_PRIMARY_COLOR=#3b82f6
NEXT_PUBLIC_CHATBOT_BUBBLE_STYLE=rounded
NEXT_PUBLIC_CHATBOT_LOGIN_REQUIRED=false

# AI Model Configuration
MODEL_NAME=gpt-4.1
IMAGE_MODEL_NAME=gpt-4.1-mini

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
NEXT_PUBLIC_OPENAI_API_KEY=your_openai_api_key_here

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=your_chatbot_index
TEMPRATURE="0"
MINSCORESOURCESTHRESHOLD=0.73

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/your_database_name

# Firebase Client Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Server-side)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"

# Embedding Configuration
FETCH_K_EMBEDDINGS=12 #number of embeddings returned 
LAMBDA_EMBEDDINGS=0.2 #Adjust lambda to balance relevance and diversity
K_EMBEDDINGS=10 #number of final returned embeddings

# Google Service Account (Optional)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/firebase-adminsdk-service-account.json

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Server Configuration
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
